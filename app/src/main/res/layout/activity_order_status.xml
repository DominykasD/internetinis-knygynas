        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textView95"
        app:layout_constraintTop_toTopOf="@+id/textView96" />

    <TextView
        android:id="@+id/textView988"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Pristatymo trukmė:"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView96"
        app:layout_constraintTop_toBottomOf="@+id/textView96" />

    <TextView
        android:id="@+id/textView999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textView977"
        app:layout_constraintTop_toTopOf="@+id/textView988" />

    <TextView
        android:id="@+id/textView1000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Adresas:"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView988"
        app:layout_constraintTop_toBottomOf="@+id/textView988" />

    <TextView
        android:id="@+id/textView1011"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textView999"
        app:layout_constraintTop_toTopOf="@+id/textView1000" />

    <TextView
        android:id="@+id/textView1022"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Miestas:"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView1000"
        app:layout_constraintTop_toBottomOf="@+id/textView1000" />

    <TextView
        android:id="@+id/textView1033"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textView1011"
        app:layout_constraintTop_toTopOf="@+id/textView1022" />

    <TextView
        android:id="@+id/textView1044"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Užsakytos prekės"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView1022"
        app:layout_constraintTop_toBottomOf="@+id/textView1022" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recViewOrdered"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView1044"
        tools:layout_editor_absoluteX="1dp" />

    <TextView
        android:id="@+id/textView1055"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="x"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

